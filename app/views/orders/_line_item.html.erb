<div class="card mb-4">
  <%= image_tag line_item.product.image.url, alt: line_item.product.name, class: "img-thumbnail", width: "200", height: "200" %>
  <div>
    <h4 class="h4"><%= line_item.product.name %></h4>
    <p><%= line_item.product.description %></p>
  </div>
  <div>
    <p>Quantity: <%= line_item.quantity %></p>
    <p>Total: <%= humanized_money_with_symbol line_item.total_price %></p>
  </div>
</div>